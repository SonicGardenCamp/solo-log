<div class="shop-form">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class ="shop-form-title text-center">店舗を登録する</h2>
      
      <%= form_with(model: @shop, url: admins_shops_path, method: :post) do |f| %>
        <%= render 'layouts/validation_errors', model: @shop %>
        
        <div class="form-group mb-3">
          <%= f.label :name, "お店の名前", class: "form-label" %>
          <%= f.text_field :name, class: 'form-control', placeholder: "名前", autofocus: true, autocomplete: "name" %>
        </div>
        
        <div class="form-group mb-3">
          <%= f.label :image, "お店の写真", class: "form-label" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>
        
        <div class="form-group mb-4">
          <%= f.label :address, "住所", class: "form-label" %>
          <%= f.text_field :address, class: "form-control", placeholder: "お店の住所", autofocus: true, autocomplete: "address" %>
        </div>
        
        <div class="form-group mb-4">
          <%= f.label :genre, "ジャンル", class: "form-label" %><br />
          <%= f.select :genre, Shop.genre.options, include_blank: "ジャンルを選択して下さい" %>
        </div>
        
        <div class="actions d-grid">
          <%= f.submit "店舗を登録する", class: "btn btn-warning btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>