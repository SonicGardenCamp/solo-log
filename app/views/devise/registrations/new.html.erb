<div class="signup-form">
  <div class="row">
  <div class="col-md-6 offset-md-3">
    <h2 class ="sign-up-title text-center">新規登録</h2>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'layouts/validation_errors', model: resource %>

      <div class="field form-group mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: 'form-control', placeholder: "Email", autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field form-group mb-3">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control', placeholder: "パスワード", autocomplete: "new-password" %>
      </div>
    
      <div class="field form-group mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード(確認用)", autocomplete: "new-password" %>
      </div>
    
      <div class="actions d-grid gap-3">
        <%= f.submit "新規登録", class: "btn btn-warning btn-block" %>
        <%= link_to "ログインボタンへ", new_user_session_path, class: "btn btn-warning btn-block" %>
      </div>
    <% end %>
  </div>
</div>
</div>