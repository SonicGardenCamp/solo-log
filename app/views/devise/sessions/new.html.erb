<div class="login-form">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class ="text-center">ログイン</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
        <div class="field form-group mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: 'form-control', placeholder: "Email", autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field form-group mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: 'form-control', placeholder: "パスワード", autocomplete: "current-password" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.label :remember_me %>
            <%= f.check_box :remember_me %>
          </div>
        <% end %>
        
        <div class="actions d-grid gap-3">
          <%= f.submit "ログイン", class: 'btn btn-warning btn-block' %>
          <%= link_to "新規登録ボタンへ", new_user_registration_path, class: "btn btn-warning btn-block mb-3" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>