<!-- ログアウトのモーダル -->
<div class="modal fade" id="userLogoutModal" tabindex="-1" aria-labelledby="userLogoutModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="userLogoutModalLabel">ログアウト</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>本当にログアウトしますか？</p>
      </div>
      <div class="modal-footer">
        <%= button_to 'ログアウト', destroy_user_session_path, method: :get, class: "btn btn-primary" %>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>